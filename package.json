  "scripts": {
    "target-setup": "firebase target:apply hosting website agrimatco-fb254",
    "dev": "vite dev",
    "build": "npm run build:search && vite build && xcopy /E /I /Y build functions\\build",
    "prebuild": "if exist functions\\build rmdir /S /Q functions\\build",
    "preview": "vite preview",
    "start": "npm run build && firebase serve",
    "deploy": "firebase deploy --only hosting,functions:ssr",
    "cy:run": "cypress run",
    "cy:open": "cypress open",
    "test": "run-p --race dev cy:run",
    "build:search": "node build-search-indexes.js && (if exist static\\search.json (del static\\search.json) && copy search.json static\\search.json)"
  },
